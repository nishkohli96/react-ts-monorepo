{
    "name": "react-ts-monorepo",
    "author": "Nishant Kohli",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "frontend": "yarn workspace frontend start",
        "frontend:test": "yarn workspace frontend test",
        "frontend:build": "yarn workspace frontend build",
        "frontend-ts": "yarn workspace frontend-ts start",
        "frontend-ts:test": "yarn workspace frontend-ts test",
        "frontend-ts:build": "yarn workspace frontend-ts build",
        "backend": "yarn workspace backend start",
        "backend:build": "yarn workspace backend build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js, jsx, ts, tsx}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "husky": "^6.0.0",
        "prettier": "^2.3.1"
    }
}
